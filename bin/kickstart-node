#!/bin/bash

BN=$(basename $0)

action_usage() {
cat <<EOF
usage: ${BN} [ git-setup | setup | help ]
EOF
}

action_help() {
action_usage
cat <<EOF
EOF
}

action_setup() {
NV="0.8.15"
NB="/opt/node"
NP="${NB}/${NV}"
NL="${NP}/lib"

NSRC="/home/family/bsmr/source/system/ecmascript/node-v0.8.15"

CFLAGS="-fPIC"
CXXFLAGS="-fPIC"
LDFLAGS="-Wl,--rpath,${NL}"

export CFLAGS CXXFLAGS LDFLAGS

cd "${NSRC}"
#./configure --prefix="${NP}" --shared-v8 --shared-openssl --shared-zlib --gdb
./configure --prefix="${NP}" --gdb
make -j9
make install
}

function action_git_setup {

TS=$(date '+%Y%m%d-%H%M%S')

GITURI="https://github.com/joyent/node.git"
GITSRC="node"
GITDIR="$HOME/temporary/setup"
OPTDIR="/opt/node"
DSTDIR="${OPTDIR}/git/${TS}"

if [ ! -d "${GITDIR}" ] ; then
	mkdir -p "${GITDIR}"
fi

pushd "${GITDIR}"

git clone "${GITURI}" "${GITSRC}"

pushd "${GITSRC}"

(
	echo "*** configure ***"
	./configure --prefix="${DSTDIR}" --gdb
	if [ "$?" != "0" ] ; then
		echo "Error: configure failed!" >&2
		exit 1
	fi
	echo "*** build ***"
	nice make -j9 "all"
	if [ "$?" != "0" ] ; then
		echo "Error: build failed!" >&2
		exit 1
	fi
	echo "*** test ***"
	make "test"
	echo "*** docs ***"
	make "doc"
	echo "*** install ***"
	make "install"
	if [ "$?" != "0" ] ; then
		echo "Error: install failed!" >&2
		exit 1
	fi
) 2>&1 | tee "../log-node-build.txt"

popd

rm -rf "${GITSRC}"

popd

cd "${OPTDIR}" && rm "active" && ln -sf "git/${TS}" "active"

}

case $1 in
git-setup)
	action_git_setup
	;;
setup)
	action_setup
	;;
help)
	action_help
	;;
*)
	action_usage
	exit 1
	;;
esac

exit 0

# EOF
